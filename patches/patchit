#!/bin/bash
HERE=`pwd`
DEPTH=../../../..

cd ${DEPTH}/system/core/init
# add radio user so it can set net.pdp0 properties
patch -p0 < ${HERE}/property_service.c.patch
# use bootmode=2 to start recovery
patch -p0 < ${HERE}/init.c.patch
cd ${HERE}


cd ${DEPTH}/bootable/recovery/minui
# fix for 32bit fb
patch -p0 < ${HERE}/graphics.c.patch
cd ${HERE}

cd ${DEPTH}/system/bluetooth/brcm_patchram_plus
# fix hciattach startup problems
patch -p0 < ${HERE}/brcm_patchram_plus.patch
cd ${HERE}
